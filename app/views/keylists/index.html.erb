        <td><%= current_keylist_message(keylist) %></td>
        <td><%= resource_in_queue_cnt(keylist) %></td>
        <td><%= link_to 'Show', keylist %></td>
        <td><%= link_to 'Редактировать список доменов', keylist_resources_path(keylist) %></td>
        <td><%= link_to 'Edit', edit_keylist_path(keylist) %></td>
        <td><%= link_to 'Destroy', keylist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

