<h1>Список ключевых слов:</h1>

<table>
  <thead>
    <tr>
      <th>Keywords</th>
      <th>Active</th>
      <th>Текущий активный домен: </th>
      <th>Ресурсов в очереди: </th>
      <th colspan="4"></th>

    </tr>
  </thead>

  <tbody>
    <% @keylists.each do |keylist| %>
      <tr>
        <td><%= keylist.keywords %></td>
